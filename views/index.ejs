<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Galeria de fotos</title>
</head>
<body>
  <div class="container mt-4">
    <h1>Galeria de filmes:</h1>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de filmes:</h2>
        </div>
        <div class="card-body">
            <form action="/upload" method="post" enctype="multipart/form-data" >
                <label>Titulo:</label>
                <input type="text" name="titulo" id="titulo" class="form-control" required>
                <label>Genêro:</label>
                <input type="text" name="genero" id="genero" class="form-control" required>
                <label>Ano de lançamento:</label>
                <input type="number" name="ano" id="ano" class="form-control" required>
                <label>Imagem:</label>
                <input type="file" name="file" id="file" class="form-control" required><br><br>
                <input type="submit" value="Enviar" class="btn btn-success w-100">
            </form>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
            
                <div class="col m-auto">
                    <div class="card">
                    <table class="table">
                    <thead>
                        <tr>
                           <th>Título:</th>
                           <th>Genêro:</th>
                           <th>Ano:</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% filmes.forEach(filme => { %> 
                         <tr>
                            <img src="/uploads/<%= filme.file %>" alt="Imagem" class="img-thumbnail">     
                         </tr>   
                        <tr>
                       <td><%= filme.titulo%></td>
                       <td><%= filme.genero%></td>
                       <td><%= filme.ano%></td>
                    </tr>
                    <% }) %>
                </tbody>
                </table> 
                
                </div>
                </div>
           
            </div>
        </div>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>