<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css">
    <title>Galeria de fotos</title>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <h1 class="d-flex justify-content-center text-white m-0">Galeria de filmes:</h1>
    <div class="container">
      
      <div class="card mt-0">
        <div class="card-header">
          <h2>Cadastro de filmes:</h2>
        </div>
        <div class="card-body">
          <form action="/upload" method="post" enctype="multipart/form-data">
            <label>Titulo:</label>
            <input
              type="text"
              name="titulo"
              id="titulo"
              class="form-control"
              required
            />
            <label>Genêro:</label>
            <input
              type="text"
              name="genero"
              id="genero"
              class="form-control"
              required
            />
            <label>Ano de lançamento:</label>
            <input
              type="number"
              name="ano"
              id="ano"
              class="form-control"
              required
            />
            <label>Imagem:</label>
            <input
              type="file"
              name="file"
              id="file"
              class="form-control"
              required
            /><br /><br />
            <input type="submit" value="Enviar" class="btn btn-success w-100" />
          </form>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col m-auto">
              <div class="card">
                <div class="card-header">
                  <h2>Filmes enviados:</h2>
                </div>
                <div class="card-body">
                  <% filmes.forEach(filme => { %>
                  <table class="table table-bordered table-dark">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">Título:</th>
                        <th scope="col">Genêro:</th>
                        <th scope="col">Ano:</th>
                      </tr>
                    </thead>

                    <tbody>
                      <tr>
                        <img
                          src="/uploads/<%= filme.file %>"
                          alt="Imagem"
                          class="mx-auto d-block img-thumbnail"
                          id="dist"/>
                      </tr>
                      <tr>
                        <td><%= filme.titulo%></td>
                        <td><%= filme.genero%></td>
                        <td><%= filme.ano%></td>
                      </tr>
                    </tbody>
                  </table>
                  <hr>
                  <% }) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
        <footer class="d-flex mt-auto flex-wrap justify-content-center align-items-center py-3 px-2">
            <p>© Filmes, Inc</p>
          </footer>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</html>
